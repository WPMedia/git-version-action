{
  "name": "@wpmedia/git-version-action",
  "version": "1.1.1",
  "description": "JavaScript Action Template",
  "main": "index.js",
  "scripts": {
    "lint": "eslint index.js",
    "package": "ncc build index.js -o dist && cp git-version.sh dist/",
