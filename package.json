    "GitHub",
    "Actions",
    "JavaScript"
  ],
  "author": "Washington Post",
  "bugs": {
    "url": "https://github.com/WPMedia/git-version-action/issues"
  },
  "homepage": "https://github.com/WPMedia/git-version-action#readme",
  "dependencies": {
    "@actions/core": "^1.2.4",
    "@actions/exec": "^1.0.4"
  },
  "devDependencies": {
    "@zeit/ncc": "^0.22.3",
    "eslint": "^7.3.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1"
  },
  "license": "MIT"
}
